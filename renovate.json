{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "github>aquaproj/aqua-renovate-config#1.10.0"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "schedule": [
    "after 8:00 am",
    "before 10:00 am"
  ],
  "dependencyDashboard": true,
  "automerge": true,
  "platformAutomerge": true,
  "regexManagers": [
    {
      "fileMatch": [
        "^\\.github/workflows/aqua\\.yaml$"
      ],
      "matchStrings": [
        " +go-version: \"(?<currentValue>.*)\" # renovate: depName=(?<depName>.*)"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "golang/go",
      "extractVersionTemplate": "^go(?<version>.*)$",
      "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.?(?<patch>\\d+)?$"
    },
    {
      "fileMatch": [
        "^dot_tool-versions$"
      ],
      "matchStrings": [
        "^deno\\s+(?<currentValue>.*)\\s#\\srenovate:\\sdepName=(?<depName>.*)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "denoland/deno",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "fileMatch": [
        "^dot_tool-versions$"
      ],
      "matchStrings": [
        "^neovim\\s+ref:(?<currentDigest>.*)\\s#\\srenovate:\\sdepName=(?<depName>.*)"
      ],
      "currentValueTemplate": "master",
      "datasourceTemplate": "git-refs",
      "depNameTemplate": "neovim/neovim",
      "packageNameTemplate": "https://github.com/neovim/neovim",
    }
  ]
}
