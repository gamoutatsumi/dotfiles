{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "asdf": {
    "enabled": true,
    "fileMatch": [
      "^dot_tool-versions"
    ]
  },
  "automerge": true,
  "dependencyDashboard": true,
  "extends": [
    "github>aquaproj/aqua-renovate-config#2.3.0",
    "config:best-practices"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "platformAutomerge": true,
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "golang/go",
      "extractVersionTemplate": "^go(?<version>.*)$",
      "fileMatch": [
        "^\\.github/workflows/aqua\\.yaml$"
      ],
      "matchStrings": [
        " +go-version: \"(?<currentValue>.*)\" # renovate: depName=(?<depName>.*)"
      ],
      "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.?(?<patch>\\d+)?$"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "vim/vim",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "fileMatch": [
        "^dot_tool-versions$"
      ],
      "matchStrings": [
        "vim +(?<currentValue>.*) # renovate: depName=(?<depName>.*)"
      ],
      "versioningTemplate": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.?(?<patch>\\d+)?$"
    },
    {
      "customType": "regex",
      "datasourceTemplate": "git-refs",
      "depNameTemplate": "neovim/neovim",
      "fileMatch": [
        "^dot_tool-versions$"
      ],
      "currentValueTemplate": "master",
      "matchStrings": [
        "neovim +ref:(?<currentDigest>.*) # renovate: depName=(?<depName>.*)"
      ],
      "packageNameTemplate": "https://github.com/neovim/neovim"
    }
  ],
  "schedule": [
    "at any time"
  ],
  "packageRules": [
    {
      "groupName": "fzf monorepo",
      "matchPackageNames": [
        "junegunn/fzf/fzf-tmux",
        "junegunn/fzf"
      ]
    }
  ],
  "platformCommit": true
}
