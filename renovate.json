{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "github>aquaproj/aqua-renovate-config#1.8.0"
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "schedule": [
    "at any time"
  ],
  "dependencyDashboard": true,
  "automerge": true,
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "golang/go"
      ],
      "versioning": "regex:^\\s+go(?<major>\\d+)\\.(?<minor>\\d+)$",
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^\\.github/workflows/.*\\.ya?ml$"
      ],
      "matchStrings": [
        "^go-version:\\s+\"(?<currentValue>.*)\"\\s+#\\srenovate:\\sdepName=(?<depName>.*)"
      ],
      "datasourceTemplate": "github-releases"
    },
    {
      "fileMatch": [
        "^dot_tool-versions$"
      ],
      "matchStrings": [
        "^deno\\s+(?<currentValue>.*)\\s#\\srenovate:\\sdepName=(?<depName>.*)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "denoland/deno",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ]
}
